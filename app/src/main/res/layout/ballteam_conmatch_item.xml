<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/ballteamcon_item_date"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:background="#ffb3b4b1"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="name"
        android:id="@+id/ballTeam_item_ShortTitle"
        android:layout_below="@+id/ballteamcon_item_date"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Round"
        android:id="@+id/ballteam_item_Round_cn"
        android:layout_below="@+id/ballteamcon_item_date"
        android:layout_toRightOf="@+id/ballTeam_item_ShortTitle"
        android:layout_toEndOf="@+id/ballTeam_item_ShortTitle"
        android:layout_marginLeft="26dp"
        android:layout_marginStart="26dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ballteam_item_Flag1_small"
        android:layout_below="@+id/ballTeam_item_ShortTitle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@mipmap/ic_launcher"
        android:layout_marginTop="22dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="team1"
        android:id="@+id/ballteam_item_team1"
        android:layout_alignBottom="@+id/ballteam_item_Flag1_small"
        android:layout_toRightOf="@+id/ballteam_item_Flag1_small"
        android:layout_toEndOf="@+id/ballteam_item_Flag1_small"
        android:layout_marginBottom="37dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="status"
        android:id="@+id/ballteam_item_status_cn"
        android:layout_marginRight="41dp"
        android:layout_marginEnd="41dp"
        android:layout_below="@+id/ballteam_item_team1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ballteam_item_Flag2_small"
        android:layout_below="@+id/ballteam_item_team1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@mipmap/ic_launcher"
        android:layout_marginTop="22dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="team2"
        android:id="@+id/ballteam_item_team2"
        android:layout_alignBottom="@+id/ballteam_item_Flag2_small"
        android:layout_toRightOf="@+id/ballteam_item_Flag2_small"
        android:layout_toEndOf="@+id/ballteam_item_Flag2_small"
        android:layout_marginBottom="30dp"/>

</RelativeLayout>