<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ballteam_item_weibo_img"
        android:src="@mipmap/ic_launcher"
        android:layout_marginTop="41dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/ballteam_item_weibo_name"
        android:layout_alignTop="@+id/ballteam_item_weibo_img"
        android:layout_toRightOf="@+id/ballteam_item_weibo_img"
        android:layout_toEndOf="@+id/ballteam_item_weibo_img"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:textSize="10sp"
        android:id="@+id/ballteam_item_weibo_vreason"
        android:layout_alignBottom="@+id/ballteam_item_weibo_img"
        android:layout_toRightOf="@+id/ballteam_item_weibo_img"
        android:layout_toEndOf="@+id/ballteam_item_weibo_img"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/ballteam_item_weibo_text"
        android:layout_below="@+id/ballteam_item_weibo_img"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ballteam_item_weibo_thumbnail_pic"
        android:layout_below="@+id/ballteam_item_weibo_text"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ballteam_item_share"
        android:src="@drawable/ic_weibo_share_n"
        android:layout_below="@+id/ballteam_item_weibo_thumbnail_pic"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ballteam_item_sharecount"
        android:layout_alignTop="@+id/ballteam_item_share"
        android:layout_toRightOf="@+id/ballteam_item_share"
        android:layout_toEndOf="@+id/ballteam_item_share"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ballteam_item_comment"
        android:src="@drawable/icon_news_comment_count"
        android:layout_marginLeft="40dp"
        android:layout_alignTop="@+id/ballteam_item_sharecount"
        android:layout_toRightOf="@+id/ballteam_item_sharecount"
        android:layout_toEndOf="@+id/ballteam_item_sharecount"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ballteam_item_commentCount"
        android:layout_alignTop="@+id/ballteam_item_comment"
        android:layout_toRightOf="@+id/ballteam_item_comment"
        android:layout_toEndOf="@+id/ballteam_item_comment"/>


</RelativeLayout>