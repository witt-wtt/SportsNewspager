<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/ballTeam_item_image"
        android:src="@mipmap/ic_launcher"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:layout_marginLeft="10dp"
        android:textSize="20sp"
        android:id="@+id/ballTeam_item_title"
        android:layout_alignBottom="@+id/ballTeam_item_image"
        android:layout_toRightOf="@+id/ballTeam_item_image"
        android:layout_toEndOf="@+id/ballTeam_item_image"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=">"
        android:textSize="20sp"
        android:id="@+id/textView2"
        android:layout_alignBottom="@+id/ballTeam_item_title"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_alignParentEnd="true"/>
</RelativeLayout>