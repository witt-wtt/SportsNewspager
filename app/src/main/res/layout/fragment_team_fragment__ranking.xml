<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              tools:context="com.teamsports.sportsnewpager.fragment.TeamFragment_Ranking">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="篮球俱乐部排行"
            android:gravity="center"
            />

        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/team_lv_baseketBall"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="查看全部>"
            android:clickable="true"
            android:id="@+id/team_tv_baseketball"
            android:gravity="center"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="足球俱乐部排行"
            android:gravity="center"
            />

        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/team_lv_footBall"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="查看全部>"
            android:clickable="true"
            android:id="@+id/team_tv_football"
            android:gravity="center"
            />
</LinearLayout>