<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:textSize="16dp"
        android:id="@+id/bkball_item_rank"
        android:layout_alignBottom="@+id/bkball_item_logo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/bkball_item_logo"
        android:layout_alignParentTop="true"
        android:src="@mipmap/ic_launcher"
        android:layout_toRightOf="@+id/bkball_item_rank"
        android:layout_toEndOf="@+id/bkball_item_rank"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/bkball_item_tname_cn"
        android:textSize="16dp"
        android:layout_alignBottom="@+id/bkball_item_logo"
        android:layout_toRightOf="@+id/bkball_item_logo"
        android:layout_toEndOf="@+id/bkball_item_logo"/>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:textSize="16dp"
        android:id="@+id/bkball_item_count"
        android:layout_alignTop="@+id/bkball_item"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="签到:"
        android:id="@+id/bkball_item"
        android:textSize="16dp"
        android:layout_alignTop="@+id/bkball_item_tname_cn"
        android:layout_toLeftOf="@+id/bkball_item_count"
        android:layout_toStartOf="@+id/bkball_item_count"/>
</RelativeLayout>